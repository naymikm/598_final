sed 's/N//g' ucsc_chr21.fa | grep -v '^$\|^>' | tr -d '\n' | tr [a-z] [A-Z] > chr21bases.fa
echo -e '\n' >> chr21bases.fa #required by readLines for EOF

library(stringr)
chr = str_split(readLines('chr21bases.fa'),pattern='')
#stackoverflow link

bases = chr[[1]]

